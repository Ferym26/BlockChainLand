-
	var aimlData = [
		{pic: 'aiml-icon_1.svg', title: 'Обнаружение аномалий', target: 'anomaly'},
		{pic: 'aiml-icon_2.svg', title: 'Прогнозное техническое обслуживание', target: 'service'},
		{pic: 'aiml-icon_3.svg', title: 'Выявление мошенничества', target: 'fraud'},
		{pic: 'aiml-icon_4.svg', title: 'Анализ паттернов поведения пользователей', target: 'users'},
		{pic: 'aiml-icon_5.svg', title: 'Пространственно-временное прогнозирование', target: 'forecasting'},
	]

+b.aiml#aiml
	.container
		.row
			.col-12

				+e.__inner

					+e.__title
						+e('h2').__title-text.h2 AI/ML
						+e.__slider-nav
							+e.__slider-nav-arrow.--prev
							+e.__slider-nav-arrow.--next
						+e.__title-descr.hidden-md-down Разметка для искусственного интеллекта

					+e.__slider.js_slider-aiml

						each item in aimlData

							+e.__slider-item
								+e.__slider-item-wrap(data-toggle='modal' data-target=`#modalAIML-${item.target}`)
									+e.__slider-pic
										+e('img').__slider-pic-img(src=`./images/${item.pic}` alt='icon')
									+e.__slider-title= item.title
									+e.__slider-icon
										+icon('i-arrow')